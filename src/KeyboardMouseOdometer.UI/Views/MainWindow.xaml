<Window x:Class="KeyboardMouseOdometer.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:views="clr-namespace:KeyboardMouseOdometer.UI.Views"
        xmlns:converters="clr-namespace:KeyboardMouseOdometer.UI.Converters"
        Title="Keyboard + Mouse Odometer" 
        Height="600" Width="800"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/Resources/app.ico"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource WindowForegroundBrush}">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:PercentageToHeightConverter x:Key="PercentageToHeightConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource HeaderBackgroundBrush}" Padding="10">
            <TextBlock Text="Keyboard + Mouse Odometer Dashboard" 
                       Style="{StaticResource HeaderTextStyle}" 
                       FontSize="20" 
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource HeaderForegroundBrush}"/>
        </Border>

        <!-- Today's Stats Summary -->
        <Border Grid.Row="1" Background="{DynamicResource ContentBackgroundBrush}" 
                BorderBrush="{DynamicResource ContentBorderBrush}" 
                BorderThickness="1" Padding="15" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Keys Today -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding TodayKeyCount}" Style="{StaticResource StatValueStyle}"/>
                    <TextBlock Text="Keys Today" Style="{StaticResource StatLabelStyle}"/>
                </StackPanel>

                <!-- Mouse Distance -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding TodayMouseDistance}" Style="{StaticResource StatValueStyle}"/>
                    <TextBlock Text="Mouse Distance" Style="{StaticResource StatLabelStyle}"/>
                </StackPanel>

                <!-- Clicks Today -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding TodayClickCount}" Style="{StaticResource StatValueStyle}"/>
                    <TextBlock Text="Clicks Today" Style="{StaticResource StatLabelStyle}"/>
                </StackPanel>

                <!-- Scroll Distance -->
                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding TodayScrollDistance}" Style="{StaticResource StatValueStyle}"/>
                    <TextBlock Text="Scroll Distance" Style="{StaticResource StatLabelStyle}"/>
                </StackPanel>

                <!-- Last Key -->
                <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding LastKeyPressed}" Style="{StaticResource StatValueStyle}"/>
                    <TextBlock Text="Last Key" Style="{StaticResource StatLabelStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="2" Margin="5"
                    Background="{DynamicResource TabBackgroundBrush}"
                    Foreground="{DynamicResource TabForegroundBrush}"
                    BorderBrush="{DynamicResource TabBorderBrush}">
            <!-- Daily Tab -->
            <TabItem Header="Daily">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="Daily Usage Report" FontSize="18" FontWeight="Bold" Margin="10,10,10,5"/>

                    <!-- Charts Side by Side -->
                    <Grid Grid.Row="1" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Keys Chart -->
                        <GroupBox Grid.Column="0" Header="Keys Per Hour" Margin="5">
                            <oxy:PlotView Model="{Binding KeysPerHourChart}" Background="{DynamicResource ChartBackgroundBrush}" MinHeight="120"/>
                        </GroupBox>

                        <!-- Mouse Distance Chart -->
                        <GroupBox Grid.Column="1" Header="Mouse Distance Per Hour" Margin="5">
                            <oxy:PlotView Model="{Binding MouseDistancePerHourChart}" Background="{DynamicResource ChartBackgroundBrush}" MinHeight="120"/>
                        </GroupBox>

                        <!-- Scroll Distance Chart -->
                        <GroupBox Grid.Column="2" Header="Scroll Distance Per Hour" Margin="5">
                            <oxy:PlotView Model="{Binding ScrollDistancePerHourChart}" Background="{DynamicResource ChartBackgroundBrush}" MinHeight="120"/>
                        </GroupBox>
                    </Grid>

                    <!-- Separator -->
                    <Separator Grid.Row="2" Margin="10,0"/>

                    <!-- Daily Data Grid -->
                    <DataGrid Grid.Row="3" 
                              ItemsSource="{Binding DailyStats}"
                              AutoGenerateColumns="False"
                              CanUserSortColumns="True"
                              CanUserResizeColumns="True"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              Background="#FF1E1E1E"
                              Foreground="White"
                              BorderBrush="#FF3C3C3C"
                              Margin="10,5,10,10"
                              VerticalScrollBarVisibility="Auto">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FF2D2D30"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="8,4"/>
                                <Setter Property="BorderBrush" Value="#FF3C3C3C"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            </Style>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF404040"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#FF007ACC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="8,4"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#FF007ACC"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat='MMM dd, yyyy'}" Width="110" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Day" Binding="{Binding DayOfWeek}" Width="60" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Keys" Binding="{Binding KeyCount, StringFormat=N0}" Width="80" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Mouse Distance" Binding="{Binding MouseDistanceDisplay}" Width="120" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Scroll Distance" Binding="{Binding ScrollDistanceDisplay}" Width="120" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Total Clicks" Binding="{Binding TotalClicks, StringFormat=N0}" Width="100" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Weekly Tab -->
            <TabItem Header="Weekly">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="2*" MinHeight="200"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*" MinHeight="150"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="Weekly Usage Report" FontSize="18" FontWeight="Bold" Margin="10,10,10,5"/>

                    <!-- Data Grid -->
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding WeeklyStats}"
                              SelectedItem="{Binding SelectedWeeklyItem}"
                              AutoGenerateColumns="False"
                              CanUserSortColumns="True"
                              CanUserResizeColumns="True"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              Background="#FF1E1E1E"
                              Foreground="White"
                              BorderBrush="#FF3C3C3C"
                              Margin="10,5,10,10"
                              VerticalScrollBarVisibility="Auto">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FF2D2D30"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="8,4"/>
                                <Setter Property="BorderBrush" Value="#FF3C3C3C"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            </Style>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF404040"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#FF007ACC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="8,4"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#FF007ACC"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Week" Binding="{Binding WeekDisplay}" Width="140" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Keys" Binding="{Binding KeyCount, StringFormat=N0}" Width="80" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Mouse Distance" Binding="{Binding MouseDistanceDisplay}" Width="120" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Scroll Distance" Binding="{Binding ScrollDistanceDisplay}" Width="120" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Total Clicks" Binding="{Binding TotalClicks, StringFormat=N0}" Width="100" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Separator -->
                    <Separator Grid.Row="2" Margin="10,0"/>

                    <!-- Bar Chart Visualization -->
                    <GroupBox Grid.Row="3" Header="Activity Visualization" Margin="10,5,10,10">
                        <ItemsControl ItemsSource="{Binding WeeklyVisualizationData}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="1" Columns="7"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Stacked Bar Chart -->
                                        <Grid Grid.Row="0" VerticalAlignment="Bottom">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Spacer -->
                                            <Rectangle Grid.Row="0" Fill="Transparent"/>
                                            
                                            <!-- Scroll bar -->
                                            <Rectangle Grid.Row="1" 
                                                       Fill="#FF4CAF50" 
                                                       Height="{Binding ScrollDistanceNormalized, Converter={StaticResource PercentageToHeightConverter}, ConverterParameter=50}"
                                                       Margin="4,0"
                                                       ToolTip="{Binding ScrollDistanceDisplay}"/>
                                            
                                            <!-- Mouse bar -->
                                            <Rectangle Grid.Row="2" 
                                                       Fill="#FF2196F3" 
                                                       Height="{Binding MouseDistanceNormalized, Converter={StaticResource PercentageToHeightConverter}, ConverterParameter=50}"
                                                       Margin="4,0"
                                                       ToolTip="{Binding MouseDistanceDisplay}"/>
                                            
                                            <!-- Keys bar -->
                                            <Rectangle Grid.Row="3" 
                                                       Fill="#FFFF9800" 
                                                       Height="{Binding KeyCountNormalized, Converter={StaticResource PercentageToHeightConverter}, ConverterParameter=50}"
                                                       Margin="4,1,4,0"
                                                       ToolTip="{Binding KeyCount, StringFormat='Keys: {0:N0}'}"/>
                                        </Grid>
                                        
                                        <!-- Day label -->
                                        <TextBlock Grid.Row="1" 
                                                   Text="{Binding DayOfWeek}" 
                                                   HorizontalAlignment="Center" 
                                                   FontSize="10" 
                                                   Margin="0,4,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Monthly Tab -->
            <TabItem Header="Monthly">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="2*" MinHeight="200"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*" MinHeight="150"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="Monthly Usage Report" FontSize="18" FontWeight="Bold" Margin="10,10,10,5"/>

                    <!-- Data Grid -->
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding MonthlyStats}"
                              SelectedItem="{Binding SelectedMonthlyItem}"
                              AutoGenerateColumns="False"
                              CanUserSortColumns="True"
                              CanUserResizeColumns="True"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              Background="#FF1E1E1E"
                              Foreground="White"
                              BorderBrush="#FF3C3C3C"
                              Margin="10,5,10,10"
                              VerticalScrollBarVisibility="Auto">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FF2D2D30"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="8,4"/>
                                <Setter Property="BorderBrush" Value="#FF3C3C3C"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            </Style>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF404040"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#FF007ACC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="8,4"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#FF007ACC"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Month" Binding="{Binding MonthDisplay}" Width="140" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Keys" Binding="{Binding KeyCount, StringFormat=N0}" Width="80" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Mouse Distance" Binding="{Binding MouseDistanceDisplay}" Width="120" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Scroll Distance" Binding="{Binding ScrollDistanceDisplay}" Width="120" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Total Clicks" Binding="{Binding TotalClicks, StringFormat=N0}" Width="100" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Separator -->
                    <Separator Grid.Row="2" Margin="10,0"/>

                    <!-- Bar Chart Visualization -->
                    <GroupBox Grid.Row="3" Header="Activity Visualization" Margin="10,5,10,10">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding MonthlyVisualizationData}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="2" Width="30">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="100"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Stacked Bar Chart -->
                                            <Grid Grid.Row="0" VerticalAlignment="Bottom">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                
                                                <!-- Spacer -->
                                                <Rectangle Grid.Row="0" Fill="Transparent"/>
                                                
                                                <!-- Scroll bar -->
                                                <Rectangle Grid.Row="1" 
                                                           Fill="#FF4CAF50" 
                                                           Height="{Binding ScrollDistanceNormalized, Converter={StaticResource PercentageToHeightConverter}, ConverterParameter=30}"
                                                           Margin="2,0"
                                                           ToolTip="{Binding ScrollDistanceDisplay}"/>
                                                
                                                <!-- Mouse bar -->
                                                <Rectangle Grid.Row="2" 
                                                           Fill="#FF2196F3" 
                                                           Height="{Binding MouseDistanceNormalized, Converter={StaticResource PercentageToHeightConverter}, ConverterParameter=30}"
                                                           Margin="2,0"
                                                           ToolTip="{Binding MouseDistanceDisplay}"/>
                                                
                                                <!-- Keys bar -->
                                                <Rectangle Grid.Row="3" 
                                                           Fill="#FFFF9800" 
                                                           Height="{Binding KeyCountNormalized, Converter={StaticResource PercentageToHeightConverter}, ConverterParameter=30}"
                                                           Margin="2,1,2,0"
                                                           ToolTip="{Binding KeyCount, StringFormat='Keys: {0:N0}'}"/>
                                            </Grid>
                                            
                                            <!-- Day label -->
                                            <TextBlock Grid.Row="1" 
                                                       Text="{Binding Date.Day}" 
                                                       HorizontalAlignment="Center" 
                                                       FontSize="9" 
                                                       Margin="0,2,0,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Lifetime Tab -->
            <TabItem Header="Lifetime">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <!-- Header -->
                        <TextBlock Text="Lifetime Totals" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="{Binding TrackingPeriod}" 
                                   FontSize="14" 
                                   FontStyle="Italic" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,30"/>

                        <!-- Main Stats Grid -->
                        <Grid Margin="0,0,0,30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Total Keys -->
                            <Border Grid.Row="0" Grid.Column="0" 
                                    Background="{DynamicResource AccentColorLightBrush}" 
                                    Padding="20" 
                                    Margin="10" 
                                    CornerRadius="8">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding LifetimeKeyCount}" 
                                               FontSize="36" 
                                               FontWeight="Bold" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Total Keys" 
                                               FontSize="16" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Total Mouse Distance -->
                            <Border Grid.Row="0" Grid.Column="1" 
                                    Background="{DynamicResource SuccessBrush}" 
                                    Padding="20" 
                                    Margin="10" 
                                    CornerRadius="8">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding LifetimeMouseDistance}" 
                                               FontSize="36" 
                                               FontWeight="Bold" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Mouse Distance" 
                                               FontSize="16" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Total Clicks -->
                            <Border Grid.Row="1" Grid.Column="0" 
                                    Background="{DynamicResource InfoBrush}" 
                                    Padding="20" 
                                    Margin="10" 
                                    CornerRadius="8">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding LifetimeTotalClicks}" 
                                               FontSize="36" 
                                               FontWeight="Bold" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Total Clicks" 
                                               FontSize="16" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Total Scroll Distance -->
                            <Border Grid.Row="1" Grid.Column="1" 
                                    Background="{DynamicResource ContentBackgroundBrush}" 
                                    BorderBrush="{DynamicResource ContentBorderBrush}"
                                    BorderThickness="1"
                                    Padding="20" 
                                    Margin="10" 
                                    CornerRadius="8">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding LifetimeScrollDistance}" 
                                               FontSize="36" 
                                               FontWeight="Bold" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Scroll Distance" 
                                               FontSize="16" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Click Breakdown -->
                        <GroupBox Header="Click Breakdown" Margin="0,0,0,20">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Left Clicks -->
                                <StackPanel Grid.Column="0" HorizontalAlignment="Center" Margin="10">
                                    <TextBlock Text="{Binding LifetimeLeftClicks}" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Left Clicks" 
                                               FontSize="14" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>

                                <!-- Right Clicks -->
                                <StackPanel Grid.Column="1" HorizontalAlignment="Center" Margin="10">
                                    <TextBlock Text="{Binding LifetimeRightClicks}" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Right Clicks" 
                                               FontSize="14" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>

                                <!-- Middle Clicks -->
                                <StackPanel Grid.Column="2" HorizontalAlignment="Center" Margin="10">
                                    <TextBlock Text="{Binding LifetimeMiddleClicks}" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Middle Clicks" 
                                               FontSize="14" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </GroupBox>

                        <!-- Refresh Button -->
                        <Button Content="Refresh Lifetime Stats" 
                                Command="{Binding RefreshLifetimeStatsCommand}" 
                                Width="200" 
                                Height="35" 
                                HorizontalAlignment="Center" 
                                Margin="0,10,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Heatmap Tab -->
            <TabItem Header="Heatmap">
                <views:HeatmapView DataContext="{Binding HeatmapViewModel}"/>
            </TabItem>

            <!-- Application Usage Tab -->
            <TabItem Header="Applications">
                <Grid Background="{DynamicResource ContentBackgroundBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="300"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Time Range Selector -->
                    <Border Grid.Row="0" Background="{DynamicResource HeaderBackgroundBrush}" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Title -->
                            <TextBlock Grid.Column="0" Text="Application Usage" 
                                       Foreground="{DynamicResource HeaderForegroundBrush}" FontSize="16" FontWeight="Bold" 
                                       VerticalAlignment="Center" Margin="0,0,20,0"/>
                            
                            <!-- Time range buttons -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                <RadioButton x:Name="TodayRadio" Content="Today" 
                                             IsChecked="{Binding Path=AppUsageViewModel.SelectedTimeRange, 
                                                         Converter={StaticResource StringBooleanConverter}, 
                                                         ConverterParameter=Today}"
                                             Style="{StaticResource TimeRangeRadioButton}"
                                             Command="{Binding AppUsageViewModel.ChangeTimeRangeCommand}"
                                             CommandParameter="Today"/>
                                
                                <RadioButton x:Name="WeeklyRadio" Content="Weekly" 
                                             IsChecked="{Binding Path=AppUsageViewModel.SelectedTimeRange, 
                                                         Converter={StaticResource StringBooleanConverter}, 
                                                         ConverterParameter=Weekly}"
                                             Style="{StaticResource TimeRangeRadioButton}"
                                             Command="{Binding AppUsageViewModel.ChangeTimeRangeCommand}"
                                             CommandParameter="Weekly"/>
                                
                                <RadioButton x:Name="MonthlyRadio" Content="Monthly" 
                                             IsChecked="{Binding Path=AppUsageViewModel.SelectedTimeRange, 
                                                         Converter={StaticResource StringBooleanConverter}, 
                                                         ConverterParameter=Monthly}"
                                             Style="{StaticResource TimeRangeRadioButton}"
                                             Command="{Binding AppUsageViewModel.ChangeTimeRangeCommand}"
                                             CommandParameter="Monthly"/>
                                
                                <RadioButton x:Name="LifetimeRadio" Content="Lifetime" 
                                             IsChecked="{Binding Path=AppUsageViewModel.SelectedTimeRange, 
                                                         Converter={StaticResource StringBooleanConverter}, 
                                                         ConverterParameter=Lifetime}"
                                             Style="{StaticResource TimeRangeRadioButton}"
                                             Command="{Binding AppUsageViewModel.ChangeTimeRangeCommand}"
                                             CommandParameter="Lifetime"/>
                            </StackPanel>
                            
                            <!-- Refresh button -->
                            <Button Grid.Column="2" Content="â†» Refresh" 
                                    Command="{Binding AppUsageViewModel.RefreshCommand}"
                                    Style="{StaticResource ModernButton}"
                                    Padding="10,5" Margin="5,0,0,0"/>
                        </Grid>
                    </Border>
                    
                    <!-- Application Usage Data Grid -->
                    <DataGrid Grid.Row="1" Margin="10" 
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              Background="{DynamicResource ContentBackgroundBrush}"
                              Foreground="{DynamicResource ContentForegroundBrush}"
                              BorderBrush="{DynamicResource ContentBorderBrush}"
                              RowBackground="{DynamicResource ContentBackgroundBrush}"
                              AlternatingRowBackground="{DynamicResource WindowBackgroundBrush}">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{DynamicResource HeaderBackgroundBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource HeaderForegroundBrush}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource ContentBorderBrush}"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter Property="Padding" Value="5,3"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            </Style>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="{DynamicResource ContentBackgroundBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource ContentForegroundBrush}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource ButtonHoverBackgroundBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource TabSelectedBackgroundBrush}"/>
                                        <Setter Property="Foreground" Value="{DynamicResource TabSelectedForegroundBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderBrush" Value="{DynamicResource ContentBorderBrush}"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource TabSelectedBackgroundBrush}"/>
                                        <Setter Property="Foreground" Value="{DynamicResource TabSelectedForegroundBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Style>
                            <Style TargetType="DataGrid">
                                <Setter Property="ItemsSource" Value="{Binding AppUsageViewModel.TodayApps}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding AppUsageViewModel.SelectedTimeRange}" Value="Today">
                                        <Setter Property="ItemsSource" Value="{Binding AppUsageViewModel.TodayApps}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding AppUsageViewModel.SelectedTimeRange}" Value="Weekly">
                                        <Setter Property="ItemsSource" Value="{Binding AppUsageViewModel.WeeklyApps}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding AppUsageViewModel.SelectedTimeRange}" Value="Monthly">
                                        <Setter Property="ItemsSource" Value="{Binding AppUsageViewModel.MonthlyApps}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding AppUsageViewModel.SelectedTimeRange}" Value="Lifetime">
                                        <Setter Property="ItemsSource" Value="{Binding AppUsageViewModel.LifetimeApps}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.Style>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Application" 
                                                Binding="{Binding AppName}" 
                                                Width="*"
                                                MinWidth="200"/>
                            <DataGridTextColumn Header="Time Used" 
                                                Binding="{Binding FormattedTime}" 
                                                Width="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Margin" Value="0,0,10,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Seconds" 
                                                Binding="{Binding SecondsUsed}" 
                                                Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Margin" Value="0,0,10,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- Application Usage Chart -->
                    <Border Grid.Row="2" Margin="10"
                            Background="{DynamicResource ContentBackgroundBrush}"
                            BorderBrush="{DynamicResource ContentBorderBrush}"
                            BorderThickness="1">
                        <oxy:PlotView Model="{Binding AppUsageViewModel.AppUsageChart}" 
                                      Background="{DynamicResource ChartBackgroundBrush}"/>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Settings Tab -->
            <TabItem Header="Settings">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <GroupBox Header="Tracking Settings" Margin="0,0,0,10">
                            <StackPanel>
                                <CheckBox Content="Track Keystrokes" IsChecked="{Binding TrackKeystrokes}" Margin="5"/>
                                <CheckBox Content="Track Mouse Movement" IsChecked="{Binding TrackMouseMovement}" Margin="5"/>
                                <CheckBox Content="Track Mouse Clicks" IsChecked="{Binding TrackMouseClicks}" Margin="5"/>
                                <CheckBox Content="Track Scroll Wheel" IsChecked="{Binding TrackScrollWheel}" Margin="5"/>
                                <CheckBox Content="Track Application Usage" IsChecked="{Binding TrackApplicationUsage}" Margin="5"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Display Settings" Margin="0,0,0,10">
                            <StackPanel>
                                <CheckBox Content="Show Toolbar" IsChecked="{Binding ShowToolbar}" Margin="5"/>
                                <CheckBox Content="Minimize to Tray" IsChecked="{Binding MinimizeToTray}" Margin="5"/>
                                <CheckBox Content="Start with Windows" IsChecked="{Binding StartWithWindows}" Margin="5"/>
                                
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Text="Distance Unit:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <ComboBox SelectedValue="{Binding DistanceUnit}" SelectedValuePath="Tag" Width="120">
                                        <ComboBoxItem Content="Metric" Tag="metric"/>
                                        <ComboBoxItem Content="Imperial" Tag="imperial"/>
                                        <ComboBoxItem Content="Pixels" Tag="pixels"/>
                                    </ComboBox>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Text="Heatmap Color Scheme:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <ComboBox SelectedValue="{Binding HeatmapColorScheme}" SelectedValuePath="Tag" Width="120">
                                        <ComboBoxItem Content="Classic" Tag="Classic" ToolTip="Blue â†’ Cyan â†’ Green â†’ Yellow â†’ Orange â†’ Red"/>
                                        <ComboBoxItem Content="FLIR Thermal" Tag="FLIR" ToolTip="FLIR thermal imaging palette: Black â†’ Purple â†’ Blue â†’ Red â†’ Orange â†’ Yellow â†’ White"/>
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Data Management" Margin="0,0,0,10">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Text="Keep data for:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBox Text="{Binding DatabaseRetentionDays}" Width="60" Margin="0,0,5,0"/>
                                    <TextBlock Text="days (0 = never delete)" VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <Button Content="Reset Today's Statistics" 
                                        Command="{Binding ResetTodayStatsCommand}" 
                                        Margin="5" Width="200" HorizontalAlignment="Left"/>
                                
                                <Button Content="Export Data..." 
                                        Command="{Binding ExportDataCommand}" 
                                        Margin="5" Width="200" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </GroupBox>

                        <Button Content="Save Settings" 
                                Command="{Binding SaveSettingsCommand}" 
                                Margin="5" Width="120" HorizontalAlignment="Left"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        
        <!-- Version Footer -->
        <Border Grid.Row="3" 
                Background="{DynamicResource BackgroundBrush}" 
                BorderBrush="{DynamicResource ContentBorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="10,5">
            <TextBlock Text="{Binding ApplicationVersion}" 
                       HorizontalAlignment="Center"
                       FontSize="11"
                       Opacity="0.7"/>
        </Border>
    </Grid>
</Window>